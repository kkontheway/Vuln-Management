# =========================
# VulnManagement Environment Template
# Copy this file to .env (local) or .env.prod (server) and fill in values.
# =========================

# Microsoft Entra ID (Azure AD)
TENANT_ID=your-tenant-id
APP_ID=your-app-registration-id
APP_SECRET=your-app-secret
REGION_ENDPOINT=api.securitycenter.microsoft.com

# Service Integrations
INTEGRATIONS_SECRET_KEY=base64-url-safe-32-byte-key
NVD_API_KEY=
KEY_VAULT_URL=

# Database Connection (used by the app)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=vulndb
DB_USER=vuln_user
DB_PASSWORD=strong-password

# MySQL Container bootstrap (only used when running docker compose)
MYSQL_ROOT_PASSWORD=change-root-password

# Flask / App settings
SECRET_KEY=change-this-secret-key
FLASK_DEBUG=False
LOG_LEVEL=INFO

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Threat intelligence data files (optional overrides)
METASPLOIT_CVE_PATH=data/metasploit.txt
NUCLEI_CVE_PATH=data/nuclei.txt

# OpenAI / AI helper (optional if using AI features)
OPENAI_API_KEY=
